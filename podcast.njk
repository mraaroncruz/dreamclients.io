---
permalink: /podcast/
layout: layouts/home.njk
---

{% block javascript_tail %}
  <script src="//cdn.podlove.org/web-player/5.x/embed.js"></script>
{% endblock %}

{% set latest = collections.latestPodcast %}
{% set previous = collections.previousPodcast %}

<section class="jumbotron h-96 min-h-screen">
  <div class="flex items-center h-full">
    <div class="jumbo-container">
      <div class="grid grid-cols-1 gap-x-16 md:grid-cols-8 flex items-center">
        <div class="jumbotron-text col-span-4">
          <h1 class="text-4xl sm:text-5xl text-gray-800 dark:text-white font-extrabold tracking-tight">Learn how to find Dream Clients from Professionals</h1>
          <p class="text-normal text-lg sm:text-2xl font-medium text-gray-600 dark:text-gray-400 mt-2">
            A podcast for freelance software developers who want to improve their business.
          </p>
          <p class="text-normal text-lg sm:text-2xl font-medium text-gray-600 dark:text-gray-400 mt-2">
            We talk with long time freelancers about finding more clients, marketing, sales and how to run your freelance business
          </p>
        </div>

        <div></div>

        <div class="jumbotron-image col-span-3">
          <img class="w-full" src="/img/logo-podcast.svg" />
        </div>
      </div>

      <div class="where mt-12">
        <h2 class="text-xl font-bold">Where to find us</h2>
        <div class="mt-8 grid grid-cols-1 gap-x-16 md:grid-cols-{{ sharing.podcast.rss_links.length }} flex items-center">
          {% for link in sharing.podcast.rss_links %}
            <a href="{{ link.link }}" target="_blank">
              <div class="w-full text-center flex items-center flex-col">
                <div class="w-16 h-16 mb-8">
                  {{ link.icon | safe }}
                </div>
                <span class="text-md font-bold">{{ link.name }}</span>
              </div>
            </a>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

<section id="subscribe-now" class="py-12">
  <div class="text-center flex items-center justify-center">
    <div>
      <h2 class="mb-4 text-3xl sm:text-4xl text-gray-800 dark:text-white font-extrabold tracking-tight">Get Instant Updates</h2>
      <p class="mb-4 text-normal text-lg sm:text-xl font-medium text-gray-600 dark:text-gray-400 mt-2">
        Get practical tips via email and updates for when new episodes come out.
      </p>
      <a class="cta-btn-lg" href="#">Subscribe Now</a>
    </div>
  </div>
</section>

<section class="pt-24 pb-12 max-w-screen-lg m-auto">
  <div class="episode mb-24">
    <h3 class="mb-4 text-3xl sm:text-2xl text-indigo-600 dark:text-white font-bold tracking-tight">Latest Episode</h3>

    <div class="latest">
      <h2 class="text-4xl">{{ latest.data.title }}</h2>

      <p class="mb-4 text-normal text-md sm:text-md font-medium text-gray-600 dark:text-gray-400 mt-2">
        {{ latest.data.summary }}
      </p>

      {% podcastPlayer latest %}
    </div>
  </div>

  <div class="episode mb-12">
    <h3 class="mb-4 text-3xl sm:text-2xl text-indigo-600 dark:text-white font-bold tracking-tight">Previous Episode</h3>

    <div class="previous">
      <h2 class="text-4xl">{{ previous.data.title }}</h2>

      <p class="mb-4 text-normal text-md sm:text-md font-medium text-gray-600 dark:text-gray-400 mt-2">
        {{ previous.data.summary }}
      </p>

      {% podcastPlayer previous %}
    </div>
  </div>
</section>

